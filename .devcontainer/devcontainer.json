{
  "name": "Quarto Workshop",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/r-lang:1": {
      "installRadian": false
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "reditorsupport.r"
      ]
    }
  },
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && ~/.local/bin/uv tool install quarto && ~/.local/bin/quarto install tinytex && ~/.local/bin/quarto check",
  "remoteUser": "vscode"
}
